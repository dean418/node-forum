<div class="post" data-postid="{{this._id}}">
	<div>
		<div class="postInfo">
			<a href="/user/{{this.userName}}" class="profileLink postInfo">{{this.userName}}</a>
			<p class="postInfo">{{this.createdOn}}</p>
		</div>

		<h2 class="postTitle">{{this.title}}</h2>
		<p class="postContent">{{this.content}}</p>
	</div>
	{{#if this.imageLocation}}
	<img class="postImage" src="{{this.imageLocation}}" alt="user post image">
	{{/if}}
	<div class="postFooter">
		{{#if @root.fullPost}}
			<p class="postInfo reply" id="comment">leave a comment</p>
		{{else}}
			<li class="iconParent">
				<a href="/post/{{this._id}}" class="commentLink">
					<ion-icon name="chatbox" class="icon small"></ion-icon>
					<p class="postInfo">{{this.commentCount}}</p>
				</a>
			</li>
		{{/if}}

		<li class="iconParent">
			{{> menu}}
			<ion-icon name="ellipsis-vertical" class="icon small optionMenu"></ion-icon>
		</li>
	</div>
</div>